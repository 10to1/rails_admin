<div class="field <%= field.to_param %>">
  <%= label_tag field.to_param, field.label %>
  <div class="input">
    <% if field.value.present? && field.value != "<a href=''></a>" %>
      <div class="row">
        <%= link_to image_tag(field.bindings[:object].send(field.name).send("url", :thumb)), field.bindings[:object].send(field.name).send("url") %>
      </div>
    <% end %>
    <div class="row">
      <%= form.file_field(field.name) %>
    </div>
  </div>
  <% if field.has_errors? %>
  <span class="errorMessage"><%= "#{field.label } #{field.errors.first}" %></span>
  <% end %>
  <p class="help"><%= field.help %></p>
</div>
